# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/analytics_db
ASYNC_DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/analytics_db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security Configuration
SECRET_KEY=your-super-secret-key-change-in-production-very-important
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# API Configuration
API_V1_STR=/api/v1
PROJECT_NAME=Real-time Analytics Dashboard
PROJECT_VERSION=1.0.0
DESCRIPTION=A modern real-time analytics dashboard with interactive charts and live data streaming

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://127.0.0.1:3000","http://127.0.0.1:5173"]

# Environment
ENVIRONMENT=development
DEBUG=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log

# WebSocket Configuration
WS_MAX_CONNECTIONS=100
WS_HEARTBEAT_INTERVAL=30

# Cache Configuration
CACHE_TTL=300
CACHE_PREFIX=analytics:

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Email Configuration (Optional)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=noreply@analytics.com
EMAILS_FROM_NAME=Analytics Dashboard

# Monitoring and Analytics
ENABLE_METRICS=True
METRICS_PORT=9090

# File Upload Configuration
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=["csv", "json", "xlsx"]

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
